<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <display-name>Ticket Management System</display-name>

    <!-- Configurar login.jsp como página welcome -->
    <welcome-file-list>
        <welcome-file>views/login.jsp</welcome-file>
    </welcome-file-list>

    <!-- ================= SERVLETS ================= -->

    <!-- LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ticketsystem.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>



    <!-- MisTicketsServlet -->
    <servlet>
        <servlet-name>MisTicketsServlet</servlet-name>
        <servlet-class>com.ticketsystem.servlets.MisTicketsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MisTicketsServlet</servlet-name>
        <url-pattern>/mis-tickets</url-pattern>
    </servlet-mapping>

    <!-- ConfiguracionServlet -->
    <servlet>
        <servlet-name>ConfiguracionServlet</servlet-name>
        <servlet-class>com.ticketsystem.servlets.ConfiguracionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfiguracionServlet</servlet-name>
        <url-pattern>/configuracion</url-pattern>
    </servlet-mapping>

    <!-- LogoutServlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.ticketsystem.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Configuración de sesión -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
